{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "builds": [
    
      { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
     {
        "src": "/api/(.*)",
        "dest": "server.js"
      
      },
      { 
        "src": "/(.*)", 
        "dest": "public/$1"
      }
  ]
}